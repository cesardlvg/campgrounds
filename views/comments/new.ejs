<% include ../partials/header %>
<div class="container">
	<div class="d-flex">
	  <!-- login box -->
	  <div class="m-auto">
 		<h1 class="text-center mt-5 mb-5">Add New Comment to: <%= campground.name %></h1>
		<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
			<div class="form-group">
				<label for="comment[text]">Comment</label>
				<input type="text" class="form-control" name="comment[text]" aria-describedby="Text" placeholder="Text">
			</div>
			
			<div class="form-group">
				<button type="submit" class="btn btn-lg btn-dark btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	  </div>
</div>

<% include ../partials/footer %>