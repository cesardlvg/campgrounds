<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
		<h1><%= user.username %></h1>
		<img src="<%= user.avatar %>" style="max-width:200px;" alt="user profile image">
		<p>Hometown: <%= user.hometown %></p>
		<p>Member since: <%= moment().format('ll'); %></p>
	</div>
	<div class="col-md-8">
		<h2><%= user.username %>'s Campgrounds</h2>
		
		<ul>
		<% campgrounds.forEach(function(campground) { %>	
			<li>
			<a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a>
			</li>
		<% }); %>
		</ul>
	</div>
</div>

<% include ../partials/footer %>