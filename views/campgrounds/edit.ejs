<% include ../partials/header %>
<div class="container">
	<div class="d-flex">
	  <!-- login box -->
	  <div class="m-auto">
 		<h1 class="text-center mt-5 mb-5">Edit: <%= campground.name %></h1>
		<form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
			<div class="form-group">
				<label for="name">Camp Name</label>
				<input type="text" class="form-control" name="campground[name]" aria-describedby="name" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<label for="name">Price</label>
				<input type="number" class="form-control" name="campground[price]" aria-describedby="price" value="<%= campground.price %>" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<label for="image">Camp Image URL</label>
				<input type="text" class="form-control" name="campground[image]" aria-describedby="image" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<label for="description">Camp Description</label>
				<input type="text" class="form-control" name="campground[description]" aria-describedby="description" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-lg btn-dark btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	  </div>
</div>

<% include ../partials/footer %>